import serial
import time

# Define the serial port (COMx for Windows, /dev/ttyUSBx or /dev/ttySx for Linux)
serial_port = "COM4"  # Change this to your actual COM port

# Establish a connection to the CP2102
ser = serial.Serial(serial_port, 9600, timeout=1)

def read_rfid():
    try:
        while True:
            # Read data from the RFID reader
            data = ser.readline().decode().strip()
            
            if data:
                print(f"RFID Tag ID: {data}")
            
            time.sleep(0.1)  # Add a short delay to avoid excessive readings

    except KeyboardInterrupt:
        print("Program terminated by user.")
    finally:
        # Close the serial port when the program is terminated
        ser.close()

if __name__ == "__main__":
    read_rfid()
